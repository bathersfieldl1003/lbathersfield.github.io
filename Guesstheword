# Import the random module to mix the secret words.
import random  

# Array of words to use for the guessing game.
word = ["technology", "chatbot", "resume", "website", "router", "switch", "laptop", "code"]

# Picks a random word from the array.
secret_word = random.choice(word)

# Creates a integer that counts the length of secret word and turns it into dashes.
dashes = "-" * len(secret_word)

# Function that prompts user for a guess.
def get_guess():
    while True:
        guess = input("Enter a letter to guess the word: ")  #turn user inmput into guess variable.
        if len(guess) == 1 and guess.islower():  
            return guess   #If user enters a single character and it is lowercase, it will return the guessed word.
        else:
            print("Invalid input. Please enter a lowercase letter.")  #If nont, then it will output this and try again.

# Function that shows the correct letters after they are guessed.
def update_dashes(secret_word, current_dashes, guess):
    result = ""
    for i in range(len(secret_word)):
        if secret_word[i] == guess:
            result += guess
        else:
            result += current_dashes[i]
    return result

# Main game function
def play_game():
    global dashes
    guesses_left = 10

    while dashes != secret_word and guesses_left > 0:
        print("\nCurrent word:", dashes)
        print("Incorrect guesses left:", guesses_left)
        guess = get_guess()

        if guess in secret_word:
            print(f"Yes! The letter '{guess}' is in the secret word.")
        else:
            print(f"Nope! The letter '{guess}' is not in the secret word.")
            guesses_left -= 1

        dashes = update_dashes(secret_word, dashes, guess)

    # End of game: win or lose
    if dashes == secret_word:
        print("\nCongratulations! You guessed the word:", secret_word)
    else:
        print("\nYou lose. The word was:", secret_word)

# Start the game
play_game()
